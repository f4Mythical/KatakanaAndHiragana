<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Poziom.PoziomHiragana">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/arrow_back"
        android:scaleType="centerInside"
        android:contentDescription="Powrót"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textTytul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zadania Hiragana"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#E65100"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/buttonLitery"
        android:layout_width="260dp"
        android:layout_height="82dp"
        android:text="Litery"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF7055"
        android:elevation="12dp"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@id/textTytul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/buttonSlowa"
        android:layout_width="260dp"
        android:layout_height="82dp"
        android:text="Słowa"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF7043"
        android:elevation="12dp"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLitery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/buttonZdania"
        android:layout_width="260dp"
        android:layout_height="82dp"
        android:text="Zdania"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        android:elevation="12dp"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSlowa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textViewFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MadeByMythical"
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>