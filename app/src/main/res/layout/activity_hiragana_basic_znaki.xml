            <Button
                android:id="@+id/buttonI"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraI"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonO"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraO"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonP"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraP"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <Button
                android:id="@+id/buttonA"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraA"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonS"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraS"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonD"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraD"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonF"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonG"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraG"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonH"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraH"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonJ"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraJ"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonK"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraK"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonL"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraL"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <Button
                android:id="@+id/buttonZ"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraZ"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonX"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraX"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonC"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraC"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonV"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraV"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonB"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraB"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonN"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraN"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonM"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"

                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/przycisk_klawiatura"
                android:text="@string/LiteraM"
                android:textColor="@color/tekst_podstawowy"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/buttonCheck"
                android:layout_width="60dp"
                android:layout_height="44dp"
                android:layout_marginEnd="4dp"
                android:text="@string/sprawdz_klawiatura"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/tekst_na_glownym"
                android:background="@drawable/bg_rounded_button"
                android:backgroundTint="@color/przycisk_poprawny"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"/>

            <Button
                android:id="@+id/buttonSpace"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1.5"
                android:layout_marginHorizontal="4dp"
                android:text="@string/spacja"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_na_glownym"
                android:backgroundTint="@color/przycisk_glowny"/>

            <TextView
                android:id="@+id/buttonRandom"
                android:layout_width="60dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/losuj"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/tekst_na_glownym"
                android:background="@drawable/bg_rounded_button"
                android:backgroundTint="@color/przycisk_losuj"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/buttonDelete"
                android:layout_width="60dp"
                android:layout_height="44dp"
                android:text="@string/cofnij_klawiatura"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/tekst_na_glownym"
                android:background="@drawable/bg_rounded_button"
                android:backgroundTint="@color/przycisk_usun"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>