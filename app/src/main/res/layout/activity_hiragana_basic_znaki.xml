<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tlo_glowne">

    <ImageButton
        android:id="@+id/buttonBack"
        style="@style/BackButtonStyle"
        android:layout_margin="16dp"
        android:contentDescription="@string/cofniecie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_preferences"
        android:contentDescription="@string/ustawienia_donauki"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/displayText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:maxHeight="120dp"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:text=""
        android:textSize="44sp"
        android:textColor="@color/tekst_glowny"
        android:background="@color/tlo_pola"
        android:gravity="center"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/buttonBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedHeight="true"/>

    <TextView
        android:id="@+id/inputText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:text=""
        android:textSize="18sp"
        android:textColor="@color/tekst_glowny"
        android:background="@color/tlo_pola"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/keyboardLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/keyboardLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonQ"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraQ"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonW"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraW"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonE"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraE"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonR"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraR"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonT"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraT"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
                android:id="@+id/buttonY"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:text="@string/LiteraY"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tekst_podstawowy"
                android:backgroundTint="@color/przycisk_klawiatura"/>

            <Button
