<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_orange"
    tools:context=".WidokBasicHiragana">

    <ImageButton
        android:id="@+id/buttonBack"
        style="@style/BackButtonStyle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/hiragana"
        android:textColor="#E65100"
        android:textSize="52sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/buttonZnaki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="NotSibling" />

    <Button
        android:id="@id/buttonZnaki"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="20dp"
        android:text="@string/znaki"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#FF7043"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSlowa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSlowa"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="20dp"
        android:text="@string/slowa"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#FF7043"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonZdania"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonZdania"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="12dp"
        android:text="@string/zdania"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#FF7043"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/wersja_podstawowa"
        android:textColor="#FF7043"
        android:textSize="14sp"
        android:alpha="0.80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonKatakana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kzdjecienormalne" />

</androidx.constraintlayout.widget.ConstraintLayout>