<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/tlo_powierzchnia"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ustawienia"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/tekst_glowny"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tryb"
        android:textSize="18sp"
        android:textColor="@color/tekst_podstawowy"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/buttonJasny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/jasny"
            android:textSize="17sp"
            android:textColor="@color/tekst_na_glownym"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/przycisk_glowny"
            app:cornerRadius="12dp"
            android:padding="14dp"/>

        <Button
            android:id="@+id/buttonCiemny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ciemny"
            android:textSize="17sp"
            android:textColor="@color/tekst_na_glownym"
            android:layout_marginStart="8dp"
            app:backgroundTint="@color/przycisk_glowny"
            app:cornerRadius="12dp"
            android:padding="14dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonZmienJezyk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zmienjezyk"
        android:textSize="15sp"
        android:textColor="@color/tekst_na_glownym"
        app:backgroundTint="@color/przycisk_glowny"
        app:cornerRadius="12dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/buttonGotowy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gotowy"
        android:textSize="17sp"
        android:textColor="@color/tekst_na_glownym"
        app:backgroundTint="@color/przycisk_glowny"
        app:cornerRadius="12dp"
        android:padding="14dp"/>

</LinearLayout>