<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/tlo_powierzchnia"
    android:padding="16dp">

    <TextView
        android:text="@string/logowanie"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/tekst_glowny"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/poleEmail"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/tekst_podstawowy"
        android:textColorHint="@color/tekst_podpowiedz"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/poleHaslo"
            android:hint="@string/haslo"
            android:inputType="textPassword"
            android:textColor="@color/tekst_podstawowy"
            android:textColorHint="@color/tekst_podpowiedz"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tekstZapomnialemHasla"
            android:text="@string/zapomnialem_haslo"
            android:textColor="@color/tekst_glowny"
            android:alpha="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tekstBladLogowanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zle_haslo_lub_email"
        android:textColor="@color/tekst_blad"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/przyciskLogowanie"
        android:text="@string/zaloguj"
        android:backgroundTint="@color/przycisk_glowny"
        android:textColor="@color/tekst_na_glownym"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tekstRejestracja"
        android:text="@string/brakKonta"
        android:textColor="@color/tekst_glowny"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>