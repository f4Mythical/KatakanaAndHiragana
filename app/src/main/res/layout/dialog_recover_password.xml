<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/tlo_powierzchnia"
    android:padding="16dp">

    <TextView
        android:text="@string/odzyskiwanie_hasla"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/tekst_glowny"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/poleEmailRecover"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/tekst_podstawowy"
        android:textColorHint="@color/tekst_podpowiedz"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tekstBladEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nie_ma_emaila"
        android:textColor="@color/tekst_blad"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/przyciskWyslij"
        android:text="@string/wyslij_email"
        android:backgroundTint="@color/przycisk_glowny"
        android:textColor="@color/tekst_na_glownym"
        android:minHeight="48dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>