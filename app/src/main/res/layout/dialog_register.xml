<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:padding="16dp">

    <TextView
        android:text="Zarejestruj sie"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#E65100"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/poleEmail"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#333333"
        android:textColorHint="#80000000"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tekstBladEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email jest już zajęty"
        android:textColor="#FF5252"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/poleHaslo"
        android:hint="Hasło"
        android:inputType="textPassword"
        android:textColor="#333333"
        android:textColorHint="#80000000"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tekstPodpowiedzHaslo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#80000000"
        android:textSize="12sp"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/przyciskRejestracja"
        android:text="Zarejestruj"
        android:backgroundTint="#E65100"
        android:textColor="#FFFFFF"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tekstLogowanie"
        android:text="Masz konto? Zaloguj się"
        android:textColor="#E65100"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>