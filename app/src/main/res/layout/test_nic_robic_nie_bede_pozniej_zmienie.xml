<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Probny">

    <ImageButton
        android:id="@+id/buttonBack"
        style="@style/BackButtonStyle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        app:srcCompat="@drawable/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@color/tlo_zakladki"
        android:elevation="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tabHiragana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tlo_powierzchnia"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/hiragana"
            android:textColor="@color/tekst_glowny"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/linia_jasna" />

        <TextView
            android:id="@+id/tabKatakana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tlo_zakladki"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/katakana"
            android:textColor="@color/tekst_glowny"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/linia_glowna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

    <Button
        android:id="@+id/buttonZnakiHiragana"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="20dp"
        android:text="@string/znaki"
        android:textAllCaps="false"
        android:textColor="@color/tekst_na_glownym"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/przycisk_glowny"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSlowaHiragana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSlowaHiragana"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="20dp"
        android:text="@string/slowa"
        android:textAllCaps="false"
        android:textColor="@color/tekst_na_glownym"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/przycisk_glowny"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonZdaniaHiragana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonZdaniaHiragana"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="12dp"
        android:text="@string/zdania"
        android:textAllCaps="false"
        android:textColor="@color/tekst_na_glownym"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/przycisk_glowny"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonZnakiKatakana"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="20dp"
        android:text="@string/znaki"
        android:textAllCaps="false"
        android:textColor="@color/tekst_na_glownym"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/przycisk_glowny"
        app:cornerRadius="28dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonSlowaKatakana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSlowaKatakana"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="20dp"
        android:text="@string/slowa"
        android:textAllCaps="false"
        android:textColor="@color/tekst_na_glownym"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/przycisk_glowny"
        app:cornerRadius="28dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonZdaniaKatakana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonZdaniaKatakana"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="12dp"
        android:text="@string/zdania"
        android:textAllCaps="false"
        android:textColor="@color/tekst_na_glownym"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/przycisk_glowny"
        app:cornerRadius="28dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>